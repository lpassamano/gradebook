<h3><%= @course.name %></h3>

<table>
  <thead>
    <tr>
      <th>
        Students
      </th>
      <% @course.assessments.each do |assessment| %>
      <th>
        <a href="/courses/<%= @course.slug %>/<%= assessment.slug %>">
          <%= assessment.name %>
        </a>
      </th>
      <% end %>
    </tr>
  </thead>
  <tbody>
    <% @course.users.each do |user| %>
      <% if user.student? %>
        <tr>
          <td>
            <%= user.name %>
          </td>
            <% user.grades.each do |grade| %>
          <td>
            <%= grade.score %>
          </td>
        <% end %>
      <% end %>
    </tr>
    <% end %>
  </tbody>
</table>

<p>
  <a href="/courses/<%= @course.slug %>/new">Add New Assessment</a>
</p>

<p>
  <a href="/courses/<%= @course.slug %>/edit">Edit Course Info and Roster</a>
</p>
