<h3>Add New Course</h3>

<form method="POST" action="/courses">
  <input type="text" name="course[name]" id="name" placeholder="Course Name" />
  <p>
    Course Roster:<br />
    <em>maximum 15 students</em>
  </p>
  <ol>
    <% 15.times do %>
      <li>
        <input type="text" name="course[students][][name]" placeholder="Student Name" />
        <input type="text" name="course[students][][email]" placeholder="Student Email" />
        <input type="hidden" id="hidden" name="course[students][][role_id][<%= Role.find_or_create_by(name: "Student") %>]"
      </li>
    <% end %>
  </ol>

  <p>
    Course Assessments:<br />
  </p>
  <ol>
    <% 15.times do %>
      <li>
        <input type="text" name="course[assessments][][name]" placeholder="Name" />
      </li>
    <% end %>
  </ol>
  <input type="submit" value="Add Course" />
</form>
